<div class="col-md-3"></div>
<div class="col-md-6">
  <%= form_for @source, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>
    <div class="form-group">
      <%= f.label :image, "Upload an Image", :class => 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.file_field :image %>
      </div>
    </div>

    <div style="text-align: center">or</div>

    <div class="form-group">
      <%= f.label :url, "Provide a URL", :class => 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :url %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit 'Create', :class => 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-3"></div>
<% if Montage.any? %>
  <h2 class="col-md-12" style="text-align: center;">
    Latest Montages
  </h2>
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <% Montage.latest.limit(4).each do |montage| %>
      <%= link_to montage.source do %>
        <%= image_tag montage.image.url, :height => 400, :width => 200 %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
<% end %>

